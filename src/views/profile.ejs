<!DOCTYPE html>
<html lang="es">
  <head>
    <%- include('./partials/head') %>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />    
  </head>
  <header><%- include('./partials/header') %></header>

  <body>
    <div
      class="container-fluid"
      style="margin-top: 6rem; padding-right: 6rem; padding-left: 6rem"
    >
      <div class="row">
        <% if (user.admin=="full-admin" ) { %>
        <div class="col-12 mb-4">
          <div class="card d-flex rounded">
            <a href="/calendario/Mansilla">
              <img
                src="/images/mansilla.jpg"
                class="card-img-top"
                alt="Departamento "
                style="border-radius: 10px"
              />
              <div class="card-img-overlay">
                <h5 class="card-title hoverable" style="font-size: 35px">
                  Mansilla
                </h5>
              </div>
            </a>
          </div>
        </div>

        <div class="col-12 mb-4">
          <div class="card d-flex rounded">
            <a href="/calendario/Corrientes">
              <img
                src="/images/corrientes.jpg"
                class="card-img-top"
                alt="Departamento"
                style="border-radius: 10px"
              />
              <div class="card-img-overlay">
                <h5 class="card-title hoverable" style="font-size: 35px">
                  Corrientes
                </h5>
              </div>
            </a>
          </div>
        </div>

        <div class="col-12 mb-4">
            <div class="card d-flex rounded">
              <a href="/calendario/Las-Heras">
                <img
                  src="/images/corrientes.jpg"
                  class="card-img-top"
                  alt="Departamento "
                  style="border-radius: 10px"
                />
                <div class="card-img-overlay">
                  <h5 class="card-title hoverable" style="font-size: 35px">
                    Las Heras
                  </h5>
                </div>
              </a>
            </div>
          </div>

        <% } %> <% if (user.admin=="las-heras-admin" ) { %>
        <div class="col-12 mb-4">
          <div class="card d-flex rounded">
            <a href="/calendario/Las-Heras">
              <img
                src="/images/corrientes.jpg"
                class="card-img-top"
                alt="Departamento "
                style="border-radius: 10px"
              />
              <div class="card-img-overlay">
                <h5 class="card-title hoverable" style="font-size: 35px">
                  Las Heras
                </h5>
              </div>
            </a>
          </div>
        </div>

        <% } %>

        <% if (user.admin=="corrientes-admin" ) { %>
            <div class="col-12 mb-4">
                <div class="card d-flex rounded">
                  <a href="/calendario/Corrientes">
                    <img
                      src="/images/corrientes.jpg"
                      class="card-img-top"
                      alt="Departamento"
                      style="border-radius: 10px"
                    />
                    <div class="card-img-overlay">
                      <h5 class="card-title hoverable" style="font-size: 35px">
                        Corrientes
                      </h5>
                    </div>
                  </a>
                </div>
              </div>
    
            <% } %>
      </div>
    </div>

    <!-- Incluye el JS de Bootstrap y Popper.js (si es necesario) -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0/dist/js/bootstrap.bundle.min.js"></script>
    <!-- Scripts de Bootstrap y cualquier otro script necesario -->
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.9.2/dist/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
  </body>
</html>
