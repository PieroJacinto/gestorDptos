<!DOCTYPE html>
<html lang="en">
<head>
  <%- include('./partials/head') %>
</head>

<body>
  <header><%- include('./partials/header') %></header>

  <main>
    <!-- Formulario de Edición de Gasto -->
    <form
      id="formulario-editar-gasto"
      action="/gasto/<%= gasto.id %>/update?_method=PUT"
      method="POST"
      class="my-4 p-4 border rounded w-75 "
      style="background-color: #f8f9fa; margin: auto;"
    >
      <div class="mb-3">
        <label for="tipoGasto" class="form-label"><strong>Tipo de Gasto</strong></label>
        <select class="form-select" id="tipoGasto" name="tipoGasto" required>
          <option value="internet_tv" <%= gasto.tipoGasto === 'internet_tv' ? 'selected' : '' %>>Internet/TV</option>
          <option value="expensas" <%= gasto.tipoGasto === 'expensas' ? 'selected' : '' %>>Expensas</option>
          <option value="luz" <%= gasto.tipoGasto === 'luz' ? 'selected' : '' %>>Luz</option>
          <option value="gas" <%= gasto.tipoGasto === 'gas' ? 'selected' : '' %>>Gas</option>
          <option value="agua" <%= gasto.tipoGasto === 'agua' ? 'selected' : '' %>>Agua</option>
          <option value="abl" <%= gasto.tipoGasto === 'abl' ? 'selected' : '' %>>ABL</option>
        </select>
      </div>

      <div class="mb-3">
        <label for="precio" class="form-label"><strong>Precio</strong></label>
        <input type="number" class="form-control" id="precio" name="precio" value="<%= gasto.precio %>" required>
      </div>

      <div class="form-group">
        <label for="year" class="form-label"><strong>Año:</strong></label>
        <select class="form-select" name="year" id="year">
          <% const yearActual = new Date().getFullYear(); %>
          <% for (let i = 2030; i >= 2000; i--) { %>
            <option value="<%= i %>" <% if (i == gasto.year) { %>selected<% } %>><%= i %></option>
          <% } %>
        </select>
      </div>

      <div class="form-group mb-4">
        <label for="month" class="form-label"><strong>Mes:</strong></label>
        <select class="form-select" name="month" id="month">
          <% const meses = ['Enero', 'Febrero', 'Marzo', 'Abril', 'Mayo', 'Junio', 'Julio', 'Agosto', 'Septiembre', 'Octubre', 'Noviembre', 'Diciembre']; %>
          <% for (let i = 1; i <= meses.length; i++) { %>
            <option value="<%= i %>" <% if (i == gasto.month) { %>selected<% } %>><%= meses[i - 1] %></option>
          <% } %>
        </select>
      </div>

      <!-- Otros campos o inputs que puedas tener -->

      <div class="text-center">
        <button type="submit" class="btn fs-3 btn-primary">Actualizar Gasto</button>
      </div>
    </form>
  </main>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-kenU1KFdBIe4zVF0s0G1M5b4hcpxyD9F7jL+jjXkk+Q2h455rYXK/7HAuoJl+0I4" crossorigin="anonymous"></script>
</body>
</html>

